<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/objective_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/details_txt"
            android:layout_below="@+id/details"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_light"
            android:text="Objective"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/duration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/objective_txt"
            android:layout_below="@+id/objective"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_light"
            android:text="Duration"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/duration_txt"
            android:layout_alignBottom="@+id/duration_txt"
            android:layout_alignEnd="@+id/objective"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/duration_txt"
            android:fontFamily="@font/roboto_medium"
            android:text="12/02/2018-14/07/2018"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/details_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="Details"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_light"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/objective"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/objective_txt"
            android:layout_alignBottom="@+id/objective_txt"
            android:layout_alignEnd="@+id/details"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/objective_txt"
            android:fontFamily="@font/roboto_medium"
            android:text="Loose weight"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/details"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/details_txt"
            android:layout_alignBottom="@+id/details_txt"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/details_txt"
            android:fontFamily="@font/roboto_medium"
            android:text="Post-summer recovery"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/relativeLayout"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/days_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/days"
            android:layout_below="@+id/days"
            android:fontFamily="@font/roboto_light"
            android:text="Days/week"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="false"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_light"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </RelativeLayout>

</RelativeLayout>